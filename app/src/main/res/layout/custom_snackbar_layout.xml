<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_snack_layout"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    android:background="@color/purple"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/custom_snack_image"
        android:layout_width="38dp"
        android:layout_height="52dp"
        android:contentDescription="@string/shows_image"
        android:src="@drawable/card_club_1"/>

    <TextView
        android:id="@+id/custom_snack_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hiding_card_was"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_mini"
        android:textSize="@dimen/text_size_small"/>

</LinearLayout>