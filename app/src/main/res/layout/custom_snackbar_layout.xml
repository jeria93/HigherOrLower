<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_snack_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/purple"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/custom_snack_image"
        android:layout_width="38dp"
        android:layout_height="52dp"
        android:contentDescription="@string/shows_image"
        android:src="@drawable/card_club_1"/>

    <TextView
        android:id="@+id/custom_snack_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiding card was:"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:textSize="16sp"/>



</LinearLayout>